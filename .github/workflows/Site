name: Deploy HTML to GitHub Pages

on:
  push:
    branches: ["master"]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      # 1️⃣ Checkout della repo
      - uses: actions/checkout@v4

      # 2️⃣ Configura Pages
      - uses: actions/configure-pages@v5

      # 3️⃣ Carica SOLO index.html (e eventuali file statici) come artifact
      - uses: actions/upload-pages-artifact@v3
        with:
          path: './index.html'   # pubblica solo questo file

      # 4️⃣ Deploy su GitHub Pages
      - id: deployment
        uses: actions/deploy-pages@v4


